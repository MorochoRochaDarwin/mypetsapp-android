<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    style="@style/Base.Widget.AppCompat.Button.Borderless"
    android:padding="4dp">


    <ImageView
        android:id="@+id/item_mascota_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_mascota_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ribbonc"
        android:text="ID: 2"
        android:textColor="#fff"
        android:textSize="13sp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_mascota_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_mascota_foto"
        android:background="@drawable/ribbon2p"
        android:gravity="center"
        android:maxLines="1"
        android:text="Oso"
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>